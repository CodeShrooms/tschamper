script/source = "extends Control


# Sound-bus IDs: FIRST_BUS_ID = 0, SECOND_BUS_ID = 1, etc.
enum {MASTER_BUS_ID, MUSIC_BUS_ID, SFX_BUS_ID}

# Unique Names for the sound sliders.
# onready because the nodes are not loaded before scene is ready.
@onready var master_volume_slider = %MasterVolumeSlider
@onready var music_volume_slider =%MusicVolumeSlider
@onready var sfx_volume_slider =%SFXVolumeSlider

# Default sound-bus volume.
var DEFAULT_VOLUME

func _ready():
	# set slider value to current sound bus values
	master_volume_slider.value = db_to_linear(AudioServer.get_bus_volume_db(MASTER_BUS_ID))*100
	music_volume_slider.value = db_to_linear(AudioServer.get_bus_volume_db(MUSIC_BUS_ID))*100
	sfx_volume_slider.value = db_to_linear(AudioServer.get_bus_volume_db(SFX_BUS_ID))*100
	DEFAULT_VOLUME = = db_to_linear(AudioServer.get_bus_volume_db(MASTER_BUS_ID))*100

func _on_master_default_pressed():
	# set master volume to default value if user presses default button
	set_default_volume(MASTER_BUS_ID, master_volume_slider)
	print(DEFAULT_VOLUME)

func _on_music_default_pressed():
	# set music volume to default value if user presses default button
	set_default_volume(MUSIC_BUS_ID, music_volume_slider)

func _on_sfx_default_pressed():
	set_default_volume(SFX_BUS_ID, sfx_volume_slider)

func _on_master_volume_slider_value_changed(volume):
	set_volume(MASTER_BUS_ID, volume)

func _on_music_volume_slider_value_changed(volume):
	set_volume(MUSIC_BUS_ID, volume)

func _on_sfx_volume_slider_value_changed(volume):
	set_volume(SFX_BUS_ID, volume)

func set_slider(slider_node, volume):
	slider_node.value = volume
	
func set_volume(bus_id, volume):
	AudioServer.set_bus_volume_db(bus_id, linear_to_db(volume/100))
	AudioServer.set_bus_mute(bus_id, volume < .05)

func set_default_volume(bus_id, slider):
	set_volume(bus_id, DEFAULT_VOLUME)
	set_slider(slider, DEFAULT_VOLUME)
"

